@model IoTTestbed.Pages.TaskList.CreateModel
@{



}
<br />
<h1 class="text-info">

    Create a new Task

</h1>
<hr />

<h3 class="text-dark">

    Select <strong class="text-success">available</strong> sensor(s) then upload the file.

</h3>
<form enctype="multipart/form-data" method="post">
    <div class="container p-0 m-0">
        <div class="row">
            <div class="col-12  p-1 mt-1">

                @if (Model.AvailableSensors.Count() > 0)
                {
                    <table class="table table-striped border">
                        <thead>
                            <tr>
                                <th>

                                    <label class="text-center" asp-for="Sensors.FirstOrDefault().SensorId"></label>

                                </th>
                                <th> <label class="text-center ml-auto" asp-for="Sensors.FirstOrDefault().RasIp"></label></th>
                                <th> <label class="text-center" asp-for="Sensors.FirstOrDefault().Rime"></label></th>
                                <th> <label class="" asp-for="Sensors.FirstOrDefault().Availability"></label></th>
                                <th> <label class="text-center" asp-for="Sensors.FirstOrDefault().Status"></label></th>
                                <th> Select</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var sensor_item in Model.Sensors)
                            {

                            <tr>

                                <td>@Html.DisplayFor(m => sensor_item.SensorId)</td>
                                <td class="">@Html.DisplayFor(m => sensor_item.RasIp)</td>
                                <td class="">@Html.DisplayFor(m => sensor_item.Rime)</td>
                                <td class="">@Html.DisplayFor(m => sensor_item.Availability)</td>


                                @if (sensor_item.Status.Equals("active"))
                                {

                                    <td>
                                        <span class="badge badge-warning">Active</span>
                                    </td>
                                }


                                else if (sensor_item.Status.Equals("pending"))
                                {

                                    <td>
                                        <span class="badge badge-info">Pending</span>
                                    </td>
                                }


                                else if (sensor_item.Status.Equals("unavailable"))
                                {


                                    <td>
                                        <span class="badge badge-danger">Unavailable</span>
                                    </td>


                                }

                                else
                                {

                                    <td>
                                        <span class="badge badge-success">Available</span>
                                    </td>


                                }

                                @*<td>
            <button asp-page-handler="Delete" asp-route-id="@sensor_item.Id" onclick="return confirm('Are you sure you want to delete?')" class="btn btn-danger btn-sm">Delete</button>
        </td>*@


                                @if (sensor_item.Status.Equals("available"))
                                {

                                    @*<td> <input type="checkbox" name="sensor" value=""> </td>*@
                                    <td asp-route-id="@sensor_item.SensorId" class="">@Html.CheckBoxFor(m => sensor_item.Availability)</td>



                                }
                                else
                                {
                                    <td> <input type="checkbox" name="sensor" value="" disabled> </td>

                                }




                            </tr>


                            }


                        </tbody>
                    </table>
                }

                else
                {


                    <p>There are no sensors available</p>


                }


            </div>
        </div>
    </div>


    <br />
    <br />

    <div class="input-group">

        <div class="custom-file">
            <input asp-for="FileUpload.FormFile" type="file" class="custom-file-input" id="inputGroupFile04">
            <label asp-for="FileUpload.FormFile" class="custom-file-label" for="inputGroupFile04">Choose file</label>
            <span asp-validation-for="FileUpload.FormFile"></span>
        </div>
        <div class="input-group-append">
            <input asp-page-handler="Upload" class="btn btn-success" type="submit" value="Upload" />
        </div>

    </div>
</form>



